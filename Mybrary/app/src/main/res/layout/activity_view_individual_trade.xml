<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/background_color"
    tools:context="com.example.jacob.mybrary.ViewIndividualTradeActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Trade"
        android:id="@+id/tradeTitleView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Your Items"
        android:background="@color/secondary_color"
        android:id="@+id/yourItemsTitleView"
        android:layout_below="@+id/tradeTitleView"
        android:layout_alignParentStart="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/yourItemsListView"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/yourItemsTitleView"
        android:layout_alignParentEnd="true"
        android:background="@color/secondary_color"
        android:layout_above="@+id/theirItemsTitleView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Their Items"
        android:background="@color/secondary_color"
        android:id="@+id/theirItemsTitleView"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modify"
        android:id="@+id/modifyButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="modifyTradeButton"
        android:background="@drawable/button_corners"
        style="@style/ButtonStyle" />
    <!--style="?android:attr/buttonStyleSmall"-->

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:background="@color/secondary_color"
        android:id="@+id/theirItemsListView"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/modifyButton"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/theirItemsTitleView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accept"
        android:id="@+id/acceptButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:onClick="acceptTradeButton"
        android:background="@drawable/button_corners"
        style="@style/ButtonStyle" />
    <!--style="?android:attr/buttonStyleSmall"-->

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Decline"
        android:id="@+id/declineButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:onClick="declineTradeButton"
        android:background="@drawable/button_corners"
        style="@style/ButtonStyle" />
    <!--style="?android:attr/buttonStyleSmall"-->

</RelativeLayout>

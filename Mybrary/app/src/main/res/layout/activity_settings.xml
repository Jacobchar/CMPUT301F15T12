<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/background_color"
    tools:context="com.example.jacob.mybrary.SettingsActivity">

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Edit Profile"
        android:id="@+id/editProfileButton"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:textSize="25dp"
        android:onClick="openEditProfileActivity"
        android:background="@drawable/button_corners"
        style="@style/ButtonStyle"/>

    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Download Images"
        android:id="@+id/downloadImagesCheckBox"
        android:layout_above="@+id/editProfileButton"
        android:layout_centerHorizontal="true"
        android:background="@color/secondary_color"
        android:onClick="toggleDownloadImages"/>
</RelativeLayout>

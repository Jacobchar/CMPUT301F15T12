<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.jacob.mybrary.SettingsActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="3"
        android:columnCount="2"
        android:id="@+id/gridView"
        android:orientation="horizontal"
        android:rowOrderPreserved="false"
        android:columnOrderPreserved="false"
        android:useDefaultMargins="true"
        android:touchscreenBlocksFocus="false"
        android:nestedScrollingEnabled="false"
        android:longClickable="false"
        android:layout_marginTop="53dp"
        android:padding="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true">

        <TextView
            android:text="User Name: "
            android:textSize="20sp"
            android:id="@+id/UserNameText1"/>
        <TextView
            android:text="Input Username"
            android:textSize="20sp"
            android:background="#CCCCCC"
            android:layout_width="200dp"
            android:id="@+id/UserNameText2" />

        <TextView
            android:text="Address: "
            android:textSize="20sp"
            android:id="@+id/AddressText1"/>
        <TextView
            android:text="Input Address"
            android:textSize="20sp"
            android:background="#CCCCCC"
            android:layout_width="200dp"
            android:id="@+id/AddressText2"/>

        <TextView
            android:text="City: "
            android:textSize="20sp"
            android:id="@+id/CityText1"/>
        <TextView
            android:text="Input City"
            android:textSize="20sp"
            android:background="#CCCCCC"
            android:layout_width="200dp"
            android:id="@+id/CityText2"/>


    </GridLayout>

</RelativeLayout>

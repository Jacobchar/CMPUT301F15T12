<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#021123"
    tools:context="com.example.jacob.mybrary.MainMenuActivity">

    <Button
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:text="View Profile"
        android:id="@+id/profileViewButton"
        android:layout_marginTop="114dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:text="Inventory"
        android:id="@+id/InventoryViewButton"
        android:layout_below="@+id/profileViewButton"
        android:layout_alignStart="@+id/profileViewButton" />

    <Button
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:text="Friends List"
        android:id="@+id/FriendsListViewButton"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/InventoryViewButton" />

    <Button
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:text="Trades List"
        android:id="@+id/TradeViewButton"
        android:layout_below="@+id/FriendsListViewButton"
        android:layout_alignStart="@+id/FriendsListViewButton" />

    <Button
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:id="@+id/SettingsViewButton"
        android:layout_below="@+id/TradeViewButton"
        android:layout_alignStart="@+id/TradeViewButton" />

</RelativeLayout>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.jacob.mybrary.MainMenuActivity"
    android:background="@color/background_color">

    <Button
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:text="View Profile"
        android:id="@+id/profileViewButton"
        android:layout_marginTop="45dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:onClick="openProfileActivity"
        android:background="@drawable/button_corners"
        style="@style/ButtonStyle"/>

    <Button
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:text="Inventory"
        android:id="@+id/InventoryViewButton"
        android:layout_below="@+id/profileViewButton"
        android:layout_alignStart="@+id/profileViewButton"
        android:onClick="openInventoryActivity"
        android:background="@drawable/button_corners"
        android:layout_marginTop="15dp"
        style="@style/ButtonStyle" />

    <Button
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:text="Friends List"
        android:id="@+id/FriendsListViewButton"
        android:onClick="openFriendsListActivity"
        android:layout_below="@+id/InventoryViewButton"
        android:layout_alignStart="@+id/InventoryViewButton"
        android:background="@drawable/button_corners"
        android:layout_marginTop="15dp"
        style="@style/ButtonStyle" />

    <Button
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:text="Trades List"
        android:id="@+id/TradeViewButton"
        android:layout_below="@+id/FriendsListViewButton"
        android:layout_alignStart="@+id/FriendsListViewButton"
        android:layout_marginTop="15dp"
        android:background="@drawable/button_corners"
        android:onClick="openTradeListActivity"
        style="@style/ButtonStyle" />


    <Button
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:text="Top Traders"
        android:id="@+id/TopTradersViewButton"
        android:layout_below="@+id/TradeViewButton"
        android:layout_alignStart="@+id/TradeViewButton"
        android:layout_marginTop="15dp"
        android:background="@drawable/button_corners"
        android:onClick="openTopTradersActivity"
        style="@style/ButtonStyle" />

    <Button
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:id="@+id/SettingsViewButton"
        android:onClick="openSettingsActivity"
        android:layout_below="@+id/TopTradersViewButton"
        android:layout_alignStart="@+id/TopTradersViewButton"
        android:background="@drawable/button_corners"
        android:layout_marginTop="15dp"
        style="@style/ButtonStyle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Mybrary"
        android:id="@+id/mybraryTitleView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:typeface="serif"
        android:textSize="30dp"
        android:textStyle="bold" />

</RelativeLayout>
